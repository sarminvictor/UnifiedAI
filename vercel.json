{
  "version": 2,
  "buildCommand": "npm run build",
  "installCommand": "npm install",
  "framework": "nextjs",
  "regions": ["iad1"],
  "builds": [
    {
      "src": "package.json",
      "use": "@vercel/next"
    }
  ],
  "crons": [
    {
      "path": "/api/cron",
      "schedule": "0 5 * * *"
    }
  ],
  "env": {
    "PRISMA_SCHEMA_DISABLE_ADVISORY_LOCK": "true",
    "PRISMA_CLIENT_ENGINE_TYPE": "binary",
    "PRISMA_CLI_QUERY_ENGINE_TYPE": "binary",
    "PRISMA_GENERATE_DATAPROXY": "false"
  }
} 